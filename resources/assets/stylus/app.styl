.nav-dropdown-items
  max-height 0
  transition max-height .3s ease-in-out
  padding 5px 14px
  margin 0
  overflow-y hidden
.nav-dropdown.open > .nav-dropdown-items
  max-height 1000px
.nav-link      
  font-family SourceSansPro-Light
  font-size 16px
  color #FFFFFF
  letter-spacing 0.4px
  line-height 27px

.container-menu 
  background-color #53b2f8
  width 200px
  .head-menu
    background-color #28A0FF
    display flex
    justify-content space-between
    padding 12px
    box-sizing border-box
    p 
      font-family SourceSansPro-Regular
      font-size 18px
      color #FFFFFF
      letter-spacing -0.05px
  .container-menu-nav
    nav 
      padding 10px
      box-sizing border-box
