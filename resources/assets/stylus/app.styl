html, body, div, p, input, textarea, h1, h2, h3, h4, h5, ul, li, a 
  margin 0
  padding 0

@font-face
   font-family SourceSansPro-Bold
   font-style Bold
   src url(../fonts/Source_Sans_Pro/SourceSansPro-Bold.ttf)

@font-face
   font-family SourceSansPro-Regular
   font-style Regular
   src url(../fonts/Source_Sans_Pro/SourceSansPro-Regular.ttf)

@font-face
  font-family SourceSansPro-Light 
  font-style Light
  src url(../fonts/Source_Sans_Pro/SourceSansPro-Light.ttf)

html
  background-color #ECEFF3

li
  list-style none

a 
  text-decoration none

.container 
  width 100%
  margin 0 auto

.form-control
  display flex
  flex-direction column
  margin 10px 0

label
  font-family SourceSansPro-Regular
  font-size 16px
  color #6C6B6B
  margin 4px 0
  
input[type=text],
input[type=password],
input[type=number]
  box-sizing border-box
  padding 0 10px 
  border 1px solid #B6B5B5
  border-radius 10px
  height 30px
  width 300px

input[type=submit]
  border-radius 50px
  padding 8px 46px
  color #FFF
  font-size 14px
  font-family SourceSansPro-Regular

.blue
  background-color #116DEA

.red
  background-color #F32121

